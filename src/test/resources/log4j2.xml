<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36}::%M::%L - %msg%n"/>
    </Console>

    <File name="FileLogger" fileName="logs/automation.log" append="false">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36}::%M::%L - %msg%n"/>
    </File>
  </Appenders>

  <Loggers>
    <Root level="info" includeLocation="true">
      <AppenderRef ref="Console" includeLocation="true"/>
      <AppenderRef ref="FileLogger" includeLocation="true"/>
    </Root>
  </Loggers>
</Configuration>
